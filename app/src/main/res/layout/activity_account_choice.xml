<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:backgroundTint="#27326E"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginTitlePageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:text="Account!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="32sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choose the account that you want right now"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.3" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:columnCount="2"
        android:rowCount="1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/Business"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:background="@drawable/bgteambtnnew"
            android:layout_columnWeight="1"
            android:fontFamily="@font/aclonica"
            android:text="Bussiness"
            android:textColor="#000000"
            android:textSize="18sp"></Button>
        <!--android:background="@drawable/bgteambtnnew"-->
        <Button
            android:id="@+id/Personal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:background="@drawable/bgbtnnew"
            android:layout_columnWeight="1"
            android:fontFamily="@font/aclonica"
            android:text="Personal"
            android:textColor="#000000"
            android:textSize="18sp"></Button>
        <!-- android:background="@drawable/bgbtnnew" -->
    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>