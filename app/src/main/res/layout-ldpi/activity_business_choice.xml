<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:backgroundTint="#27326E"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BusinessChoiceTitlePageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aclonica"
                android:text="Business"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Create For A New Team As Admin"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Else Join to Your Existing Team"
                android:textColor="#FFF"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold">
            </TextView>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#F5F6F8"
                android:backgroundTint="#7D53C6"></View>
        </LinearLayout>

        <Button
            android:id="@+id/btnCreateTeamTask"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bgttsvaebtn"
            android:fontFamily="@font/aclonica"
            android:text="Create Team"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp"></Button>

        <Button
            android:id="@+id/btnJoinTeamTask"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/aclonica"
            android:text="Join Team"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
